{
  "manifest_version": 2,

  "name": "No More Cats",
  "author": "Guido Garc√≠a @palmerabollo",
  "version": "0.1.0",
  "description": "Block all those annoying cats",
  "homepage_url": "https://github.com/palmerabollo/nomorecats",

  "browser_action": {
    "default_icon": "images/tab-icon.png",
    "default_title": "No More Cats"
  },

  "background": {
    "page": "background.html",
    "persistent": true
  },

  "content_scripts": [{
    "js": ["content.js"],
    "run_at": "document_end",
    "matches": ["http://*/*", "https://*/*"]
  }],

  "web_accessible_resources": [
    "images/*", "tensorflow/*"
  ],

  "permissions": [
    "activeTab",
    "https://*/*",
    "http://*/*"
  ]
}
